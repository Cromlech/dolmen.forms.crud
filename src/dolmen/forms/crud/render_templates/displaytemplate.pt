<div class="defaultview">
  <h1 tal:condition="view/label" tal:content="view/label" />
 
  <tal:block tal:repeat="widget view/widgets/values">
    <div class="field"
	 tal:define="widget_odd repeat/widget/odd;
		     description  widget/field/description;">
      <label tal:condition="widget/label"
	     tal:attributes="for widget/id">
	<span i18n:translate=""
	      tal:content="widget/label">label</span>
