<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:grok="http://namespaces.zope.org/grok">

  <!-- meta files -->
  <include package="zope.app.zcmlfiles" file="meta.zcml" />
  <include package="zope.securitypolicy" file="meta.zcml" />

  <!-- Packages with needed components -->
  <include package="zope.app.zcmlfiles" />

  <!-- Grokking the tests -->
  <include package="dolmen.forms.crud" />
  <grok:grok package="dolmen.forms.crud.tests" />

  <!-- Layer manipulation -->
  <include package="megrok.z3cform.base" file="default_form_layer.zcml"/>

  <!-- Security -->
  <securityPolicy
      component="zope.securitypolicy.zopepolicy.ZopeSecurityPolicy" />

  <principal
      id="zope.manager"
      title="Manager"
      login="mgr"
      password="mgrpw"
      />

  <principal
      id="zope.manfred"
      title="Manfred"
      login="manfred"
      password="mammoth"
      />

  <grantAll principal="zope.manager" />

</configure>
